extends layout

block content
  h1 管理メニュー
  p ようこそ, #{user.displayname}
  p
    a.ui-btn.ui-btn-inline(href='/admin/make.html', width='200') ナレッジ作成
    a.ui-btn.ui-btn-inline(href='/admin/select.html', width='200') ナレッジ編集
  p
    a.ui-btn.ui-btn-inline(href='/admin/changepw.html', width='200') パスワード変更
  if user.role === 'administrator'
    p
      a.ui-btn.ui-btn-inline(href='/admin/createuser.html', width='200') ユーザー作成
      a.ui-btn.ui-btn-inline(href='/admin/searchuser.html', width='200', data-ajax='false') ユーザー編集
  p
    a.ui-btn.ui-btn-inline(href='/logout.html', data-ajax='false') ログアウト
