extends layout

block content
  h1 #{resource.changePassword}
  p #{resource.changePasswordTo} #{user.displayname}
  form(action='/admin/changepw.html', method='post')
    include csrf
    p #{message}
    p
      input(type='hidden', name='username')&attributes({value: user.username})
    p
      label #{resource.password}
      input(autofocus, type='password', name='password')
    p
      input.ui-btn.ui-btn-inline(type='submit', value=`${resource.save}`)
  p #{resource.passwordPolicy}
    ul
      li #{resource.passwordPolicy1}
      li #{resource.passwordPolicy2}
      li #{resource.passwordPolicy3}
      li #{resource.passwordPolicy4}
      li #{resource.passwordPolicy5}
  p
    a.ui-btn.ui-btn-inline(href='/admin/menu.html') #{resource.adminMenu}
  p
    a.ui-btn.ui-btn-inline(href='/logout.html') #{resource.logout}
